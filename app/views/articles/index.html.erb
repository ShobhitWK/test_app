<h1>List of articles</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td>
          <%= article.id %></td>
        <td>
          <%= article.title %>
        </td>
        <td>
          <%= article.description %>
        </td>
        <td>
          Placeholder
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
